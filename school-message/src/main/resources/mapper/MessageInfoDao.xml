<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zfy.school.message.dao.MessageInfoDao">

    <resultMap type="cn.zfy.school.message.entity.MessageInfo" id="MessageInfoMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="authorAccount" column="author_account" jdbcType="INTEGER"/>
        <result property="classNumber" column="class_number" jdbcType="INTEGER"/>
        <result property="course" column="course" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="sendMessage">
        insert into message_info
        (author_account, class_number, course, content, date)
        values (#{authorAccount}, #{classNumber}, #{course}, #{content}, #{date})
    </insert>

    <delete id="deleteMessage">
        delete from message_info
        where id = #{id}
    </delete>

    <select id="selectMessageInfoByClassNumberOrAccount" resultMap="MessageInfoMap" resultType="arraylist">
        SELECT *
        FROM message_info
        WHERE author_account = #{authorAccount}
           or class_number = #{classNumber}
        order by date DESC
            LIMIT #{startNumber}, #{pageSize}
    </select>

    <select id="selectMessageInfoAndReplyInfoById" resultMap="MessageInfoMap" resultType="arraylist">
        SELECT *
        FROM message_info message, reply_info reply
        WHERE id = #{id}
           or reply.message_id = message.id
        order by date DESC
            LIMIT #{startNumber}, #{pageSize}
    </select>

</mapper>

